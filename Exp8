clc
clear all
close all
k=2*pi;
d=0.5;
%total pattern of broadside with ef=cos
N=[4 8 12];
for i=1:3
 theta=0:(pi/180):2*pi;
 beta=0;
 psi=(k*d*cos(theta))+beta;
 af=(1/N(i))*(sin(N(i)*psi*0.5)./sin(psi*0.5));
 ef=abs(cos(theta));
 tp=ef.*af;
 figure(1)
 subplot(2,4,i)
 polar(theta,af)
 title(sprintf('Polar Plot for Broadside Array with %i elements',N(i)))
 subplot(2,4,4)
 polar(theta,ef)
 title('Element Factor cos')
 subplot(2,4,i+4)
 polar(theta,tp)
 title(sprintf('Total Pattern for Broadside Array with %i 
elements',N(i)))
 
end
%total pattern of broadside with ef=sin
N=[4 8 12];
