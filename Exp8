%phase scanning
theta1=input('enter value of theta');
N=[4 8 12];
for i=1:3
 theta=0:(pi/180):2*pi;
 beta=-1*k*d*cos(theta1);
 psi=(k*d*cos(theta))+beta;
 af=(1/N(i))*(sin(N(i)*psi*0.5)./sin(psi*0.5));
 figure(7)
 subplot(1,3,i)
 polar(theta,af)
 title(sprintf('Polar Plot for %i degree Array with %i 
elements',theta1,N(i)))
end
