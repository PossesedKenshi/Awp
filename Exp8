%total pattern of endfire for O degree with ef=sin
N=[4 8 12];
for i=1:3
 theta=0:(pi/180):2*pi;
 beta=-1*k*d;
 psi=(k*d*cos(theta))+beta;
af=(1/N(i))*(sin(N(i)*psi*0.5)./sin(psi*0.5));
 ef=abs(sin(theta));
 tp=ef.*af;
 figure(3)
 subplot(2,4,i)
 polar(theta,af)
 title(sprintf('Polar Plot for Endfire Array with %i elements',N(i)))
 subplot(2,4,4)
 polar(theta,ef)
 title('Element Factor sin')
 subplot(2,4,i+4)
 polar(theta,tp)
 title(sprintf('Total Pattern for Endfire Array with %i elements',N(i)))
end
